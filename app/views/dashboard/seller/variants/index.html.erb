<div class="container mt-5">
  <div class="card shadow border-0">
    <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
      <h4 class="mb-0">Variants for <%= @product.name %></h4>
      <%= link_to "Add Variant", new_dashboard_seller_product_variant_path(@product), class: "btn btn-sm btn-light" %>
    </div>

    <div class="card-body p-0">
      <% if @product.variants.any? %>
        <div class="table-responsive">
          <table class="table table-striped table-hover mb-0">
            <thead class="table-success">
              <tr>
                <th>SKU</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Option Values</th>
                <th class="text-center">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @product.variants.each do |variant| %>
                <tr>
                  <td><%= variant.sku %></td>

                 <%= form_with model: variant, url: dashboard_seller_product_variant_path(@product, variant), local: true do |f| %>

                    <td>
                      <%= f.number_field :price, value: variant.price, step: 0.01, class: "form-control form-control-sm" %>
                    </td>
                    <td>
                      <%= f.number_field :stock_quantity, value: variant.stock_quantity, class: "form-control form-control-sm" %>
                    </td>
                    <td>
                      <% variant.option_values.each do |value| %>
                        <span class="badge bg-success"><%= value.option_type.name %>: <%= value.value %></span>
                      <% end %>
                    </td>
                    <td class="text-center">
                      <%= f.submit "Save", class: "btn btn-sm btn-outline-success me-2" %>
                      <%= link_to "Delete", dashboard_seller_product_variant_path(@product, variant),
                                  method: :delete,
                                  data: { confirm: "Are you sure?" },
                                  class: "btn btn-sm btn-outline-danger" %>
                    </td>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="p-4">
          <p class="text-muted">No variants available for this product.</p>
        </div>
      <% end %>
    </div>

    <div class="card-footer bg-light text-end">
      <%= link_to "Back to Products", dashboard_seller_products_path, class: "btn btn-outline-success" %>
    </div>
  </div>
</div>
