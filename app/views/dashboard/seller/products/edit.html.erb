<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow border-0">
        <div class="card-header bg-success text-white">
          <h3 class="mb-0">Edit Product</h3>
        </div>
        <div class="card-body">
          <%= form_with(model: [:dashboard, :seller, @product],data: { turbo: false }, local: true) do |form| %>

            <% if @product.errors.any? %>
              <div class="alert alert-danger">
                <h5><%= pluralize(@product.errors.count, "error") %> prevented this product from being saved:</h5>
                <ul class="mb-0">
                  <% @product.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= form.label :name, class: "form-label" %>
              <%= form.text_field :name, class: "form-control", placeholder: "Enter product name" %>
            </div>

            <div class="mb-3">
              <%= form.label :description, class: "form-label" %>
              <%= form.text_area :description, class: "form-control", rows: 4, placeholder: "Enter product description" %>
            </div>

            <div class="mb-3">
              <%= form.label :base_price, class: "form-label" %>
              <%= form.number_field :base_price, step: 0.01, class: "form-control", placeholder: "Enter base price" %>
            </div>

            <div class="d-grid gap-2">
              <%= form.submit "Update Product", class: "btn btn-success btn-lg" %>
            </div>

          <% end %>
        </div>

        <div class="card-footer text-end bg-light">
          <%= link_to 'Back to Products', dashboard_seller_products_path, class: "btn btn-outline-success" %>
        </div>
      </div>
    </div>
  </div>
</div>
