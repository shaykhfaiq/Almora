<div class="container mt-5">
  <div class="card shadow border-0">
    <div class="card-header bg-success text-white">
      <h3 class="mb-0">Product Details</h3>
    </div>

    <div class="card-body">
      <p><strong>Name:</strong> <%= @product.name %></p>
      <p><strong>Description:</strong> <%= @product.description %></p>
      <p><strong>Base Price:</strong> <%= number_to_currency(@product.base_price) %></p>
      <p><strong>Category:</strong> <%= @product.category&.name || "Uncategorized" %></p>

      <% if @product.images.attached? %>
        <div class="my-4">
          <h5 class="mb-3">Product Images:</h5>

         
          <div class="text-center mb-4">
            <%= image_tag url_for(@product.images.first), id: "mainImage", class: "img-fluid rounded shadow", style: "max-height: 400px;" %>
          </div>

          
          <div class="d-flex flex-wrap justify-content-center gap-3">
            <% @product.images.each do |image| %>
              <%= image_tag url_for(image),
                    class: "img-thumbnail preview-thumb",
                    data: { full: url_for(image) },
                    style: "width: 100px; height: 100px; object-fit: cover; cursor: pointer;" %>
            <% end %>
          </div>
        </div>
      <% else %>
        <p class="text-muted">No images uploaded for this product.</p>
      <% end %>

      <hr>

      <h5 class="text-success">Variants</h5>
      <% if @variants.any? %>
        <ul class="list-group">
          <% @variants.each do |variant| %>
            <li class="list-group-item">
              <strong>SKU:</strong> <%= variant.sku %> |
              <strong>Price:</strong> <%= number_to_currency(variant.price) %> |
              <strong>Stock:</strong> <%= variant.stock_quantity %>
              <% variant.option_values.each do |value| %>
                <span class="badge bg-success"><%= value.option_type.name %>: <%= value.value %></span>
              <% end %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-muted">No variants created yet for this product.</p>
      <% end %>

      <div class="mt-4">
        <%= link_to "Add Variant", new_dashboard_seller_product_variant_path(@product), class: "btn btn-success" %>
      </div>
    </div>

    <div class="card-footer bg-light text-end">
      <%= link_to "Back to Products", dashboard_seller_products_path, class: "btn btn-outline-success" %>
    </div>
  </div>
</div>


<script>
  document.addEventListener("DOMContentLoaded", function () {
    const mainImage = document.getElementById("mainImage");
    const thumbs = document.querySelectorAll(".preview-thumb");

    thumbs.forEach(thumb => {
      thumb.addEventListener("click", function () {
        const fullUrl = this.dataset.full;
        mainImage.src = fullUrl;
      });
    });
  });
</script>
