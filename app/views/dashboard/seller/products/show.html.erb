<div class="container mt-5">
  <div class="card shadow border-0">
    <div class="card-header bg-success text-white">
      <h3 class="mb-0">Product Details</h3>
    </div>
    <div class="card-body">

      <p><strong>Name:</strong> <%= @product.name %></p>
      <p><strong>Description:</strong> <%= @product.description %></p>
      <p><strong>Price:</strong> <%= number_to_currency(@product.base_price) %></p>

      <% if @product.images.attached? %>
        <div class="my-3">
          <h5>Images:</h5>
          <div class="d-flex flex-wrap gap-3">
            <% @product.images.each do |image| %>
              <%= image_tag image.variant(resize_to_limit: [150, 150]), class: "img-thumbnail" %>
            <% end %>
          </div>
        </div>
      <% end %>

      <hr>

     

      <hr>

      <h5 class="text-success">Variants</h5>
      <% if @variants.any? %>
        <ul class="list-group">
          <% @variants.each do |variant| %>
            <li class="list-group-item">
              SKU: <strong><%= variant.sku %></strong> |
              Price: <%= number_to_currency(variant.price) %> |
              Stock: <%= variant.stock_quantity %>
              <% variant.option_values.each do |value| %>
                <span class="badge bg-success"><%= value.option_type.name %>: <%= value.value %></span>
              <% end %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-muted">No variants yet.</p>
      <% end %>

      <div class="mt-3">
        <%= link_to "Add Variant", new_dashboard_seller_product_variant_path(@product), class: "btn btn-success" %>
      </div>

    </div>
    <div class="card-footer text-end bg-light">
      <%= link_to "Back to Products", dashboard_seller_products_path, class: "btn btn-outline-success" %>
    </div>
  </div>
</div>
