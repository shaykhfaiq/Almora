<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow border-0">
        <div class="card-header bg-success text-white">
          <h3 class="mb-0">Add New Product</h3>
        </div>

        <div class="card-body">
          <%= form_with(model: [:dashboard, :seller, @product], data: { turbo: false }, local: true, html: { multipart: true }) do |form| %>

            <% if @product.errors.any? %>
              <div class="alert alert-danger">
                <h5><%= pluralize(@product.errors.count, "error") %> prevented this product from being saved:</h5>
                <ul class="mb-0">
                  <% @product.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= form.label :name, class: "form-label" %>
              <%= form.text_field :name, class: "form-control", placeholder: "Enter product name" %>
            </div>

            <div class="mb-3">
              <%= form.label :description, class: "form-label" %>
              <%= form.text_area :description, rows: 4, class: "form-control", placeholder: "Enter product description" %>
            </div>

            <div class="mb-3">
              <%= form.label :base_price, class: "form-label" %>
              <%= form.number_field :base_price, step: 0.01, class: "form-control", placeholder: "Enter base price" %>
            </div>

            <div class="mb-3">
              <%= form.label :category_id, "Select Category", class: "form-label" %>
              <%= form.collection_select :category_id, current_user.categories, :id, :name,
                    { prompt: "Choose a category" },
                    { class: "form-select" } %>
            </div>

            <div class="mb-3">
              <%= form.label :images, "Upload Images", class: "form-label" %>
              <%= form.file_field :images, multiple: true, accept: "image/*", class: "form-control", onchange: "previewImages(event)" %>

              <div id="image-previews" class="d-flex gap-2 mt-3 flex-wrap"></div>
            </div>

            <div class="d-grid">
              <%= form.submit "Create Product", class: "btn btn-success btn-lg" %>
            </div>

          <% end %>
        </div>

        <div class="card-footer text-end bg-light">
          <%= link_to "Back to Products", dashboard_seller_products_path, class: "btn btn-outline-success" %>
        </div>
      </div>
    </div>
  </div>
</div>


<script>
  function previewImages(event) {
    const container = document.getElementById('image-previews');
    container.innerHTML = ''; 

    Array.from(event.target.files).forEach(file => {
      if (!file.type.startsWith('image/')) return;

      const reader = new FileReader();
      reader.onload = e => {
        const img = document.createElement('img');
        img.src = e.target.result;
        img.className = 'img-thumbnail';
        img.style.width = '100px';
        img.style.height = '100px';
        img.style.objectFit = 'cover';
        container.appendChild(img);
      };
      reader.readAsDataURL(file);
    });
  }
</script>
