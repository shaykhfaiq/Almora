<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-success">My Products</h2>
    <%= link_to 'New Product', new_dashboard_seller_product_path, class: "btn btn-success" %>
  </div>

  <div class="table-responsive shadow-sm">
    <table class="table table-bordered table-hover align-middle">
      <thead class="table-success">
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Price</th>
          <th class="text-center">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= truncate(product.description, length: 80) %></td>
            <td><%= number_to_currency(product.base_price) %></td>
            <td class="text-center">
              <div class="btn-group btn-group-sm">
                <%= link_to 'Show', dashboard_seller_product_path(product), class: "btn btn-outline-success" %>
                <%= link_to 'Edit', edit_dashboard_seller_product_path(product), class: "btn btn-outline-secondary" %>
                <%= button_to dashboard_seller_product_path(product),
                      method: :delete,
                      data: { turbo: false, turbo_confirm: "Are you sure?" },
                      class: "btn btn-sm btn-outline-danger",
                      form: { class: "d-inline" } do %>
                  <i class="fas fa-trash"></i>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
