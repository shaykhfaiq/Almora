<div class="container mt-5">
  <div class="card shadow">
    <div class="card-header bg-success text-white">
      <h3>Add Option Value</h3>
    </div>
    <div class="card-body">
      <%= form_with model: [@option_type, @option_value],
                    url: dashboard_seller_option_type_option_values_path(@option_type),
                    local: true do |form| %>

        <div class="mb-3">
          <%= form.label :value, class: "form-label" %>
          <%= form.text_field :value, class: "form-control", placeholder: "Enter option value" %>
        </div>

        <div class="d-grid">
          <%= form.submit "Add", class: "btn btn-success" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
