<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow border-0 rounded-4">
        <div class="card-header bg-success text-white rounded-top-4">
          <h4 class="mb-0">🏠 Complete Your Address</h4>
        </div>
        <div class="card-body p-4">

          <%= form_with model: current_user, url: buyer_orders_update_address_path, method: :patch, local: true do |f| %>
            <div class="mb-3">
              <%= f.label :contact, class: "form-label" %>
              <%= f.text_field :contact, class: "form-control rounded-pill" %>
            </div>

            <div class="mb-3">
              <%= f.label :address, class: "form-label" %>
              <%= f.text_field :address, class: "form-control rounded-pill" %>
            </div>

            <div class="mb-3">
              <%= f.label :city, class: "form-label" %>
              <%= f.text_field :city, class: "form-control rounded-pill" %>
            </div>

            <div class="mb-3">
              <%= f.label :country, class: "form-label" %>
              <%= f.text_field :country, class: "form-control rounded-pill" %>
            </div>

            <%= f.submit "Save & Continue", class: "btn btn-success w-100 py-2 fw-semibold shadow-sm rounded-pill" %>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
