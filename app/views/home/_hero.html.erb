            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>

        <div class="carousel-inner h-100">

            <div class="carousel-item active">
                <img src="https://images.unsplash.com/photo-1555529669-e69e7aa0ba9a?ixlib=rb-4.0.3&auto=format&fit=crop&w=1600&h=900&q=80" class="d-block w-100" alt="Modern Shopping Mall Interior">
                <div class="carousel-overlay">
                    <div class="hero-content">
                        <h1 class="hero-title">Discover Your Style</h1>
                        <p class="hero-subtitle">Explore our curated collection of premium fashion and lifestyle products</p>
                        <div class="hero-buttons">
                            <a href="#shop" class="btn btn-hero-primary">
                                <i class="fas fa-shopping-bag me-2"></i>Shop Now
                            </a>
                            <a href="#about" class="btn btn-hero-secondary">
                                <i class="fas fa-play me-2"></i>Watch Story
                            </a>
                        </div>
                    </div>
                </div>
            </div>


            <div class="carousel-item">
                <img src="https://images.unsplash.com/photo-1556742049-0cfed4f6a45d?ixlib=rb-4.0.3&auto=format&fit=crop&w=1600&h=900&q=80" class="d-block w-100" alt="Online Shopping Experience">
                <div class="carousel-overlay">
                    <div class="hero-content">
                        <h1 class="hero-title">Shop Smart, Live Better</h1>
                        <p class="hero-subtitle">Experience seamless online shopping with unbeatable deals and fast delivery</p>
                        <div class="hero-buttons">
                            <a href="#deals" class="btn btn-hero-primary">
                                <i class="fas fa-tags me-2"></i>View Deals
                            </a>
                            <a href="#contact" class="btn btn-hero-secondary">
                                <i class="fas fa-user-plus me-2"></i>Join Now
                            </a>
                        </div>
                    </div>
                </div>
            </div>


            <div class="carousel-item">
                <img src="https://images.unsplash.com/photo-1472851294608-062f824d29cc?ixlib=rb-4.0.3&auto=format&fit=crop&w=1600&h=900&q=80" class="d-block w-100" alt="Modern Retail Store">
                <div class="carousel-overlay">
                    <div class="hero-content">
                        <h1 class="hero-title">Premium Quality Guaranteed</h1>
                        <p class="hero-subtitle">From trendy fashion to everyday essentials - find everything you need in one place</p>
                        <div class="hero-buttons">
                            <a href="#shop" class="btn btn-hero-primary">
                                <i class="fas fa-star me-2"></i>Best Sellers
                            </a>
                            <a href="#contact" class="btn btn-hero-secondary">
                                <i class="fas fa-gift me-2"></i>Gift Cards
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>


        <div class="hero-features d-none d-md-flex">
            <div class="hero-feature">
                <i class="fas fa-shipping-fast"></i>
                <span>Free Shipping</span>
            </div>
            <div class="hero-feature">
                <i class="fas fa-shield-alt"></i>
                <span>Secure Payment</span>
            </div>
            <div class="hero-feature">
                <i class="fas fa-undo"></i>
                <span>Easy Returns</span>
            </div>
            <div class="hero-feature">
                <i class="fas fa-headset"></i>
                <span>24/7 Support</span>
            </div>
        </div>
    </div>
</section>




<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<script>
document.addEventListener('DOMContentLoaded', function() {

    const carouselElement = document.querySelector('#heroCarousel');
    if (carouselElement) {
        const carousel = new bootstrap.Carousel(carouselElement, {
            interval: 4000,
            wrap: true,
            touch: true,
            pause: 'hover'
        });


        carouselElement.addEventListener('mouseenter', function() {
            carousel.pause();
        });

        carouselElement.addEventListener('mouseleave', function() {
            carousel.cycle();
        });


        carouselElement.addEventListener('slide.bs.carousel', function(e) {
            const activeContent = e.relatedTarget.querySelector('.hero-content');
            if (activeContent) {
                activeContent.style.animation = 'none';
                setTimeout(() => {
                    activeContent.style.animation = 'fadeInUp 1s ease-out';
                }, 100);
            }
        });
    }


    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            const target = document.querySelector(this.getAttribute('href'));
            if (target) {
                target.scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
            }
        });
    });
});
</script>
</body>
</html>
