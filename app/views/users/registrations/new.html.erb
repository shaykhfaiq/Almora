
<div class="container py-5" style="background-color: #f7fdf7; min-height: 100vh;">
  <div class="row justify-content-center">
    <div class="col-md-7 col-lg-6">
      <div class="card shadow rounded-4 border-0">
        <div class="card-body p-4">
          <h2 class="text-center fw-bold mb-2" style="color: #2e7d32;">Almora</h2>
          <p class="text-center text-muted mb-4">Create your account</p>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :post }) do |f| %>
            <%= devise_error_messages! %>

            <div class="form-group mb-3">
            <%= label_tag "user_role", "Register As", class: "form-label" %>
                <%= select_tag "user[role]",
                options_for_select([["Buyer", "buyer"], ["Seller", "seller"]], selected: params.dig(:user, :role)),
                class: "form-select border-success" %>
            </div>


            <div class="form-group mb-3">
              <%= f.label :first_name, "First Name", class: "form-label" %>
              <%= f.text_field :first_name, class: "form-control border-success" %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :last_name, "Last Name", class: "form-label" %>
              <%= f.text_field :last_name, class: "form-control border-success" %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :email, "Email", class: "form-label" %>
              <%= f.email_field :email, class: "form-control border-success" %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :password, "Password", class: "form-label" %>
              <%= f.password_field :password, class: "form-control border-success" %>
            </div>

            <div class="form-group mb-4">
              <%= f.label :password_confirmation, "Confirm Password", class: "form-label" %>
              <%= f.password_field :password_confirmation, class: "form-control border-success" %>
            </div>

            <div class="d-grid">
              <%= f.submit "Sign Up", class: "btn btn-success rounded-pill fw-semibold" %>
            </div>
          <% end %>

          <div class="text-center mt-3">
            <p class="text-muted">
              Already have an account?
              <%= link_to "Login", new_session_path(resource_name), class: "text-success fw-semibold" %>
            </p>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
